{
  "name": "phelper-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:db": "cd server && docker compose up -d",
    "dev:server": "cd server && npx prisma migrate dev --schema=prisma/schema.prisma || true && npx ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:client": "vite",
    "dev": "concurrently \"npm run dev:db\" \"wait-on tcp:55432 && npm run dev:server\" \"wait-on http://localhost:4000/api/health && npm run dev:client\"",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "jest --config jest.config.cjs",
    "e2e:install": "npx playwright install --with-deps",
    "e2e": "npx playwright test"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.25.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@tanstack/react-query": "^5.90.5",
    "@types/axios": "^0.9.36",
    "axios": "^1.11.0",
    "framer-motion": "^12.23.12",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.546.0",
    "papaparse": "^5.5.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "recharts": "^3.1.2",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "ts-jest": "^29.4.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "wait-on": "^7.0.1"
  },
  "description": "A personal health and productivity tracker with tabbed navigation for weight, workouts, and tasks. Offline-first, mobile-friendly, and privacy-focused.",
  "main": "eslint.config.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bigknoxy/pHelper.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bigknoxy/pHelper/issues"
  },
  "homepage": "https://github.com/bigknoxy/pHelper#readme"
}
